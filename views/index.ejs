<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />

    <!-- Example CSS -->
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body>
    <section id="navbar">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
            <form class="d-flex">
              <button style="border: none; margin-right: 150px; background-color: #000">
                <a href="" style="font-size: 20px; color: #000">hello</a>
              </button>
              <i class="bi bi-grid-3x3-gap-fill" style="margin-right: 400px"></i>
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </div>
        </div>
      </nav>
    </section>
    <section id="dashboard">
      <div class="container">
        <!-- sidebar -->
        <div class="sidebar">
          <div class="container">
            <div class="row lg-5">
              <div class="col lg-5">
                <ul>
                  <button style="border: none; color: blanchedalmond; margin-bottom: 10px">heloo</button>
                </ul>
                <ul>
                  <i class="bi bi-house-door" style="color: white; font-size: 20px"></i>
                </ul>
                <ul>
                  <a href="" style="color: white; text-decoration: none">Dashboard</a>
                </ul>
                <ul>
                  <i class="bi bi-car-front-fill" style="color: white; font-size: 20px"></i>
                </ul>
                <ul>
                  <a href="" style="color: white; text-decoration: none">Cars</a>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- akhir sidebar -->
        <!-- sidebar 2 -->
        <div class="sidebar2">
          <div class="container">
            <div class="row lg-5">
              <div class="col lg-5">
                <ul>
                  <a href="" style="color: black; text-decoration: none; font-weight: lighter">Cars</a>
                </ul>
                <ul>
                  <a href="" style="color: black; text-decoration: none">List Car</a>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- akhir sidebar 2 -->
        <div class="main">
          <div class="container">
            <div class="row lg-5">
              <div class="col lg-5">
                <form>
                  <ul>
                    <a href="" style="text-decoration: none; color: #000">Cars</a>
                    <a href="" style="text-decoration: none; color: #000">></a>
                    <a href="" style="text-decoration: none; color: #000">List Car</a>
                  </ul>
                </form>
                <form>
                  <ul>
                    <a style="font-weight: bolder">List Car</a>
                    <button style="background-color: #0d28a6; margin-left: 700px">
                      <i class="bi bi-plus" style="color: white"></i>
                      <a href="" style="text-decoration: none; color: white">Add New</a>
                    </button>
                  </ul>
                </form>
                <form>
                  <ul>
                    <button style="background-color: white; border: none; text-align: center">
                      <a href="" style="text-decoration: none; color: black">All</a>
                    </button>
                    <button style="background-color: white; border: none; text-align: center">
                      <a href="" style="text-decoration: none; color: black">Small</a>
                    </button>
                    <button style="background-color: white; border: none; text-align: center">
                      <a href="" style="text-decoration: none; color: black">Medium</a>
                    </button>
                    <button style="background-color: white; border: none; text-align: center">
                      <a href="" style="text-decoration: none; color: black">Large</a>
                    </button>
                  </ul>
                </form>
                <div class="container-md-2">
                  <div class="col d-flex">
                    <% mobils.forEach((mobil) => { %>

                    <div class="card" style="width: 30rem; margin-left: 20px; text-align: center">
                      <img src="..." class="card-img-top" alt="..." />
                      <div class="card-body">
                        <div>
                          <h6>ID</h6>
                          <p><%= mobil?.id %></p>

                          <h6>Title</h6>
                          <p><%= mobil?.nama %></p>

                          <h6>Harga</h6>
                          <p><%= mobil?.price %></p>
                        </div>
                        <a href="#" class="btn btn-primary">Delete</a>
                        <a href="#" class="btn btn-secondary">Update</a>
                      </div>
                    </div>
                    <% }) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
